---
import logo from '../assets/logo.svg';
---

<div id="container">
	<main>
		<section id="landing">
		  <img src={logo.src} width="200" height="200" alt="Stilla" />
			<h1>coming soon...</h1>
		</section>
	</main>
</div>

<style>
	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
		background-color: #000000;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#landing {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

	h1 {
		font-size: 22px;
		margin-top: 0.25em;
		color: #ffffff;
	}

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}
		h1 {
			line-height: 1.5;
		}
	}
</style>
